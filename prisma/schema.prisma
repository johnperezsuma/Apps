generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model events {
  id          String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  title       String
  description String?
  category    String?
  location    String
  city        String?
  qr_data     String?
  date        DateTime @db.Date
  time        DateTime @db.Time(6)
}

model user_notification_tokens {
  id           String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  user_id      String   @db.Uuid
  token        String
  device_name  String?
  platform     String
  is_active    Boolean  @default(true)
  last_used_at DateTime @default(now()) @db.Timestamp(6)
  created_at   DateTime @default(now()) @db.Timestamp(6)
  updated_at   DateTime @default(now()) @db.Timestamp(6)
  users        users    @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "user_notification_tokens_user_id_users_id_fk")
}

model user_notifications {
  id         String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  user_id    String    @db.Uuid
  title      String
  body       String?
  category   String?
  data       Json?
  is_read    Boolean   @default(false)
  is_deleted Boolean   @default(false)
  read_at    DateTime? @db.Timestamp(6)
  deleted_at DateTime? @db.Timestamp(6)
  created_at DateTime  @default(now()) @db.Timestamp(6)
  updated_at DateTime  @default(now()) @db.Timestamp(6)
  users      users     @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "user_notifications_user_id_users_id_fk")
}

model user_onboarding {
  id            String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  user_id       String   @unique(map: "user_onboarding_user_id_unique") @db.Uuid
  current_step  String   @default("sign_in")
  created_at    DateTime @default(now()) @db.Timestamp(6)
  updated_at    DateTime @default(now()) @db.Timestamp(6)
  previous_step String?
  users         users    @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "user_onboarding_user_id_users_id_fk")
}

model users {
  id                       String                     @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  clerk_id                 String                     @unique(map: "users_clerk_id_unique")
  email                    String                     @unique(map: "users_email_unique")
  name                     String?
  phone                    String?
  created_at               DateTime                   @default(now()) @db.Timestamp(6)
  updated_at               DateTime                   @default(now()) @db.Timestamp(6)
  customer_id              String?
  mx_guid                  String?
  user_notification_tokens user_notification_tokens[]
  user_notifications       user_notifications[]
  user_onboarding          user_onboarding?
  eventAttendees           EventAttendee[]
}



model UserDashboard {
  id            String    @id @default(uuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  accounts      AccountDashboard[]
  sessions      SessionDashboard[]
}

model AccountDashboard {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  UserDashboard     UserDashboard @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model SessionDashboard {
  id            String   @id @default(uuid())
  sessionToken  String   @unique
  userId        String
  expires       DateTime
  UserDashboard UserDashboard     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationTokenDashboard {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Event {
  id          String   @id @default(uuid())

  title        String
  description  String?
  location     String
  city         String
  date         DateTime
  startTime    String
  endTime      String

  qrImage      String?

  createdBy    String
  userCreator  String

  deleteLogic  Boolean  @default(false)

  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  attendees    EventAttendee[]
}

model EventAttendee {
  id          String   @id @default(uuid())
  eventId     String
  userId      String
  event       Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  user        users     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())

  @@unique([eventId, userId])
}